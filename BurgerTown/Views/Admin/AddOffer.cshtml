
@{
    ViewBag.Title = "AddOffer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin:10px;">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Yeni Kampanya</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post" action="/Admin/AddOffer/" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label>Kampanya Adı</label>
                    <input name="Name" type="text" class="form-control" id="exampleInputEmail1" required>
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input name="Description" type="text" class="form-control" id="exampleInputEmail1" required>
                </div>
                <div class="form-group">
                    <label>İndirim Miktarı</label>
                    <input name="Discount" type="text" class="form-control" id="exampleInputEmail1" required>
                </div>
                <div class="form-check">
                    <input name="isUsing" checked value="true" type="checkbox" class="form-check-input">
                    <label class="form-check-label" for="exampleCheck1">Kullanımda mı?</label>
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Ekle</button>
            </div>
        </form>
    </div>

</div>

