@model BurgerTown.Models.BaseModel
@{
    ViewBag.Title = "UpdateOffer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin:10px;">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Kampanya Güncelle</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post" action="/Admin/UpdateOffer/" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group" style="display:none;">
                    <label>ID</label>
                    <input name="ID" value="@Model.guncellenecekKampanya.ID" type="text" class="form-control" id="exampleInputEmail1" required>
                </div>
                <div class="form-group">
                    <label>Kampanya Adı</label>
                    <input name="Name" value="@Model.guncellenecekKampanya.Name" type="text" class="form-control" id="exampleInputEmail1" required>
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input name="Description" value="@Model.guncellenecekKampanya.Description" type="text" class="form-control" id="exampleInputEmail1" required>
                </div>
                <div class="form-group">
                    <label>İndirim Miktarı</label>
                    <input name="Discount" value="@Model.guncellenecekKampanya.Discount" type="text" class="form-control" id="exampleInputEmail1" required>
                </div>
                <div class="form-check">
                    @Html.CheckBox("isUsing", Model.guncellenecekKampanya.isUsing)
                    <label class="form-check-label" for="exampleCheck1">Kullanımda mı?</label>
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
        </form>
    </div>

</div>

