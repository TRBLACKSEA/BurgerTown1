@model BurgerTown.Models.BaseModel
@{
    ViewBag.Title = "ListEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string durum = "";}
<div style="margin:10px;">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Yeni Personel</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post" action="/Admin/ListEmployee/">
            <div class="card-body">
                <div class="form-group">
                    <label>Personel Adı</label>
                    <input name="Name" type="text" class="form-control" id="exampleInputEmail1" required>
                </div>
                <div class="form-group">
                    <label>Parola</label>
                    <input name="Password" type="password" class="form-control" id="exampleInputEmail1" required>
                </div>
                <div class="form-check">
                    <input name="isAdmin" value="true" type="checkbox" class="form-check-input">
                    <label class="form-check-label" for="exampleCheck1">Yönetici Mi?</label>
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Ekle</button>
            </div>
        </form>
    </div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Personeller</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Personel Adı</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var personel in Model.Personeller)
                    {
                        <tr>
                            <td>@personel.Name</td>
                            <td>
                                @if (personel.isAdmin)
                                {
                                    durum = "Yönetici";
                                }
                                else
                                {
                                    durum = "Yönetici Değil";
                                }
                                @durum
                            </td>
                            <td>
                                <a href="/Admin/UpdateEmployee/@personel.ID"><img src="~/AdminLTE-3.2.0/dist/img/pencil.png" style="width:32px; height:32px;" alt="Güncelle" /></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</div>

